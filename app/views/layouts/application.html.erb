<!DOCTYPE html>
<html>
  <head>
    <title>Incubit</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if @user && @user.persisted? %>
      Welcome <%= @user.username -%>
      <%= link_to "Logout", sessions_destroy_path, method: :delete -%>
    <% end %>
    <%= yield %>
  </body>
</html>
